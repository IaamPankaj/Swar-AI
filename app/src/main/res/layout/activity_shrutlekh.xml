<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    tools:context=".Shrutlekh_Activity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="श्रुतलेख"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:gravity="center"
        android:layout_marginTop="80dp"
        android:textStyle="bold"
        />


    <TextView
        android:id="@+id/dic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dictation"
        android:textColor="@color/white"
        android:gravity="center"
        android:textStyle="italic" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/selectLanguage"
        android:layout_below="@id/dic"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Select  Language"
        android:textAllCaps="false"
        android:background="@drawable/round"
        android:layout_marginTop="80dp"
        android:layout_margin="30dp"/>

    <LinearLayout
        android:id="@+id/lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/te"
        android:layout_marginTop="80sp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnUpload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload"
            android:textAllCaps="false"
            android:layout_marginEnd="15dp"
            android:drawableRight="@drawable/ic_baseline_cloud_upload_24"

            app:cornerRadius="10dp"
            android:layout_weight="2"/>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSpeak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Speak"
            android:drawableRight="@drawable/ic_baseline_keyboard_voice_24"
            android:textAllCaps="false"
            app:cornerRadius="10dp"
            android:layout_weight="2"/>

    </LinearLayout>

    <TextView
        android:id="@+id/OutoutText"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textColor="@color/white"
        android:textStyle="italic"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:textColorHint="@color/white"
        android:layout_marginTop="50sp"/>


</LinearLayout>