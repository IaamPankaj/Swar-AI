<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".Gender_Activity">



    <TextView
        android:id="@+id/tree1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:text="लिंग वर्गीकरण"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/tre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tree1"
        android:gravity="center"
        android:text="Gender  Classification"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/spk"
        android:layout_below="@id/tre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80sp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/speechBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@android:style/Animation"
            android:text="Speak"
            android:layout_marginEnd="70dp"
            android:background="@drawable/transparent_bg"
            android:drawableEnd="@drawable/ic_baseline_keyboard_voice_24"
            android:textAllCaps="false"/>


        <Button
            android:id="@+id/uploadBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload"
            android:background="@drawable/transparent_bg"
            android:drawableEnd="@drawable/ic_baseline_upload_file_24"
            android:textAllCaps="false"/>

    </LinearLayout>

    <TextView
        android:id="@+id/iSpeechIntent"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_below="@id/spk"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20sp"
        android:visibility="gone"
        android:background="@drawable/round"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/iSpeechTv"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_below="@id/iSpeechIntent"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20sp"
        android:background="@drawable/round"
        android:textColor="@color/lavender"
        android:visibility="visible" />

    <Button
        android:id="@+id/predict"
        style="@android:style/Animation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iSpeechTv"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/transparent_bg"
        android:gravity="center_horizontal"
        android:text="predict"
        android:textColor="@color/white" />



</RelativeLayout>